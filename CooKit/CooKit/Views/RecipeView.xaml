<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CooKit.ViewModels;assembly=CooKit"
             xmlns:m="clr-namespace:CooKit.Models;assembly=CooKit"
             xmlns:c="clr-namespace:CooKit.Converters;assembly=CooKit"
             xmlns:controls="clr-namespace:CooKit.Controls;assembly=CooKit"
             xmlns:ui="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             mc:Ignorable="d"
             x:Class="CooKit.Views.RecipeView"
             x:DataType="vm:RecipeViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="ui:MaterialCard">
                <Setter Property="Elevation"
                        Value="2"/>
            </Style>

            <c:TimeToFormattedMinutesStringConverter x:Key="RequiredTimeConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView Padding="20"
                    BackgroundColor="#F0F0F0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ui:MaterialCard Padding="0">
                    <Image Aspect="AspectFill"
                           HeightRequest="220"
                           Source="{Binding Recipe.Image}"/>
                </ui:MaterialCard>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:MaterialCard Padding="6">
                        <Grid ColumnSpacing="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image WidthRequest="32"
                                   HeightRequest="32"
                                   Source="ic_timer.png"/>

                            <Label Grid.Column="1"
                                   VerticalOptions="Center"
                                   Style="{StaticResource SubtitleLabelStyle}"
                                   Text="{Binding Recipe.RequiredTime,
                                        Converter={StaticResource RequiredTimeConverter}}"/>
                        </Grid>
                    </ui:MaterialCard>

                    <ui:MaterialCard Grid.Column="1"
                                     Padding="6"
                                     HeightRequest="32">
                        <CollectionView IsEnabled="False"
                                        SelectionMode="Single"
                                        ItemsSource="{Binding Recipe.Pictograms}"
                                        SelectedItem="{Binding SelectedPictogram, Mode=TwoWay}"
                                        SelectionChangedCommand="{Binding PictogramSelectedCommand}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal"
                                                   ItemSpacing="6"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="m:IPictogram">
                                    <Image WidthRequest="32"
                                           HeightRequest="32"
                                           Source="{Binding Image}"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ui:MaterialCard>
                </Grid>

                <ui:MaterialCard Grid.Row="2">
                    <Grid RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ui:MaterialLabel Text="{Binding Recipe.Name}"
                                          Style="{StaticResource HeadlineSixLabelStyle}"/>

                        <BoxView Grid.Row="1"
                                 Color="#CFCFCF"
                                 HeightRequest="1"/>

                        <ui:MaterialLabel Grid.Row="2"
                                          Text="{Binding Recipe.Description}"
                                          Style="{StaticResource BodyTwoLabelStyle}"/>
                    </Grid>
                </ui:MaterialCard>

                <ui:MaterialCard Grid.Row="3">
                    <Grid RowSpacing="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ui:MaterialLabel Text="You'll need:"
                                          Style="{StaticResource SubtitleLabelStyle}"/>

                        <StackLayout Grid.Row="1"
                                     BindableLayout.ItemsSource="{Binding Recipe.Ingredients}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="m:IIngredient">
                                    <Grid Padding="6"
                                          ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image WidthRequest="32"
                                               HeightRequest="32"
                                               Source="{Binding Icon}"/>

                                        <Label Grid.Column="1"
                                               Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               Style="{StaticResource BodyLabelStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </Grid>
                </ui:MaterialCard>

                <ui:MaterialCard Grid.Row="4">
                    <StackLayout>
                        <controls:RecipeStepsView HeightRequest="350"
                                                  IndicatorView="StepsIndicator"
                                                  ItemsSource="{Binding Recipe.Steps}"/>

                        <IndicatorView x:Name="StepsIndicator"
                                       HorizontalOptions="Center"
                                       IndicatorColor="LightGray"
                                       SelectedIndicatorColor="DarkGray"/>
                    </StackLayout>
                </ui:MaterialCard>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>