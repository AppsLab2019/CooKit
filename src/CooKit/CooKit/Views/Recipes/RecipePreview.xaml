<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:recipes="clr-namespace:CooKit.Models.Recipes;assembly=CooKit"
             mc:Ignorable="d"
             x:Class="CooKit.Views.Recipes.RecipePreview"
             x:DataType="recipes:IRecipe"
             Padding="6"
             HeightRequest="150">

    <ui:MaterialCard Padding="0"
                     CornerRadius="10"
                     x:Name="WrappingCard"
                     Style="{StaticResource Style.ClickableSurfaceCard}"
                     ClickCommandParameter="{Binding}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <forms:CachedImage Grid.RowSpan="2"
                               Aspect="AspectFill"
                               DownsampleToViewSize="True"
                               Source="{Binding PreviewImage}"/>

            <AbsoluteLayout Grid.Row="1"
                            Padding="6"
                            BackgroundColor="#B0000000">
                <ui:MaterialLabel Text="{Binding Name}"
                                  TextColor="{StaticResource Color.OnPrimary}"
                                  Style="{StaticResource FontStyle.Subtitle}"/>
            </AbsoluteLayout>
        </Grid>
    </ui:MaterialCard>
</ContentView>